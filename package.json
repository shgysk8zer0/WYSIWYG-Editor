{
  "name": "WYSIWYG-Editor",
  "version": "2.0.0",
  "description": "An HTML 5 WYSIWYG editor using `document.execCommand`",
  "keywords": ["html5", "WYSIWYG", "execCommand"],
  "author": {
    "name": "Chris Zuber",
    "email": "shgysk8zer0@gmail.com",
    "url": "https://chriszuber.com"
  },
  "contributors": [],
  "homepage": "https://wysiwyg.chriszuber.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/shgysk8zer0/WYSIWYG-Editor"
  },
  "bugs": {
    "url": "https://github.com/shgysk8zer0/WYSIWYG-Editor/issues"
  },
  "engines": {
    "npm": ">=3.5"
  },
  "scripts": {
    "build:css": "postcss stylesheets/styles/index.css -o stylesheets/styles/index.min.css -u postcss-import postcss-cssnext cssnano -m",
    "build:js": "webpack",
    "build:icons": "svg-sprite-generate -c images/icons.csv -o images/icons.svg",
    "build:all": "npm run build:icons && npm run build:css && npm run build:js",
    "lint:js": "eslint scripts",
    "watch:js": "webpack -w",
    "watch:css": "postcss stylesheets/styles/index.css -o stylesheets/styles/index.min.css -u postcss-import postcss-url postcss-cssnext cssnano -m -w",
    "git:fetch": "git fetch --all --prune --tags",
    "git:submodules": "git submodule update --init --recursive",
    "update-remote": "git submodule update --remote --init --recursive && npm update --save",
    "update-packages": "npm run git:submodules && npm run git:fetch && npm run build:all",
    "test": "npm run lint:js",
    "postinstall": "npm run git:fetch && run git:submodules && npm run build:all"
},
  "devDependencies": {
    "eslint": "^3.7.1",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-babel": "^4.0.1",
    "svgo": "^0.7.2"
  },
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "cordova": "^6.5.0",
    "cssnano": "^3.10.0",
    "postcss": "^5.2.14",
    "postcss-cli": "^3.0.0-beta",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "postcss-url": "^5.1.2",
    "svg-sprite-generator": "0.0.1",
    "webpack": "^1.13.2"
  }
}
